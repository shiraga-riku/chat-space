.messages__message{"data-message_id": message.id}
  .messages__message__info
    .messages__message__info__talker
      = message.user.name
    .messages__message__info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .messages__message__text
    - if message.content.present?
      %p.messages__message__text__content
        = message.content
    = image_tag message.image.url, class: 'messages__message__text__image' if message.image.present?